interface RecursosProps {
    nombre: string;
    descripcion: string;
    tipo: string;
    ubicacion: string;
    duracion: number;
    requisitos: string[];
}

export class Recursos {
    #nombre: string;
    #descripcion: string;
    #tipo: string;
    #ubicacion: string;
    #duracion: number;
    #requisitos: string[];

    constructor({nombre, descripcion, tipo, ubicacion, duracion, requisitos}: RecursosProps) {
        this.#nombre = nombre;
        this.#descripcion = descripcion;
        this.#tipo = tipo;
        this.#ubicacion = ubicacion;
        this.#duracion = duracion;
        this.#requisitos = requisitos;
    }

    get nombre() {
        return this.#nombre;
    }

    get descripcion() {
        return this.#descripcion;
    }

    get tipo() {
        return this.#tipo;
    }

    get ubicacion() {
        return this.#ubicacion;
    } 

    get duracion() {
        return this.#duracion;
    }

    get requisitos() {
        return this.#requisitos;
    }

    toJSON() {
        return {
            nombre: this.#nombre,
            descripcion: this.#descripcion,
            tipo: this.#tipo,
            ubicacion: this.#ubicacion,
            duracion: this.#duracion,
            requisitos: this.#requisitos,
        };
    }
}